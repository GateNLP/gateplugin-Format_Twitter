<?xml version="1.0" encoding="UTF-8" ?>

<batch id="sample" xmlns="http://gate.ac.uk/ns/cloud/batch/1.0">
	<application file="application.xgapp" />

	<report file="report.xml" />

	<!--
		This input handler reads a JSON file that contains one Twitter JSON
		per line (it's using the JSON input handler but with a mime type)
	-->
	<input class="gate.cloud.io.json.JSONStreamingInputHandler"
 		srcFile="input.json"
 		encoding="UTF-8"
		mimeType="text/x-json-twitter"
		idPointer="/id_str" />

	<!--
		Stores all the processed docs in a single JSON file in the Twitter
		JSON format. One Tweet JSON per line. Note we've choosen to only
		save URL, Hashtag, Mention, and Token annotations from the
		default set.
	-->
	<output
		dir="output"
		encoding="UTF-8"
		fileExtension=".json"
		class="gate.cloud.io.twitter.TwitterJSONStreamingOutputHandler">
		<annotationSet>
			<annotationType name="URL"/>
			<annotationType name="Hashtag"/>
			<annotationType name="UserMention"/>
			<annotationType name="Token"/>
		</annotationSet>
	</output>

	<!--
		Stores the annotated GATE documents to ease debugging the JSON output
	-->
	<output
		dir="output"
		encoding="UTF-8"
		fileExtension=".GATE.xml"
		class="gate.cloud.io.file.GATEStandOffFileOutputHandler" />

</batch>
